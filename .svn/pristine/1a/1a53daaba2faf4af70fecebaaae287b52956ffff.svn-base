	<body class="creambg">
		<div class="classify">
			<div class="classify-left">
				<div style="float: left;position: absolute;top:15%;"><img src="../img/classify.png" style="width: 25px;"></div>
				<div class="classify-btn" style="padding-left: 25px;" cla-ctr="btn">分类按钮</div>
				<div class="classify-mark" cla-ctr="mark"></div>
				<ul class="classify-ul" cla-ctr="ul">
					<li cla-ctr="li">分类1</li>
					<li cla-ctr="li">分类2</li>
					<li cla-ctr="li">分类3</li>
					<li cla-ctr="li">分类4</li>
				</ul>
			</div>
			<div class="classify-right" cla-ctr="show">
				分类名称
			</div>
		</div>
		<script>
			$(".classify").on("click",function(event){
				var $me = $(this);
				var $show = $me.find("[cla-ctr=show]");
				var $mark = $me.find("[cla-ctr=mark]");
				var $ul=$me.find("[cla-ctr=ul]");
				switch($(event.target).attr("cla-ctr")){
					case "btn":
						$mark.show();
						$ul.show()
						break;
					case "mark":
						$mark.hide();
						$ul.hide();	
						break;
					case "li":
						$mark.hide();
						$ul.hide();
						$show.text($(event.target).text());	
									
				}


			})
		</script>
		<div class="path">
			<span class="left">请选择文件路径</span>
			<span class="right">&gt;</span>
		</div>
		<div class="searcharea">
			<div class="search1">
				<input type="text" placeholder="请输入关键字" onblur="dosearch()" />
				<span></span>
			</div>
			<a class="filter">筛选</a>
		</div>
		<div class="filterchosen">
			<span>筛选条件：范围-局，订单，xx-cc，XXXXxxxxxxxxxxx发生否是否</span>
