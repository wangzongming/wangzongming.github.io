body { margin: 0; }
ul { list-style: none; margin: 0; padding: 0; }

.cube { -webkit-backface-visibility: hidden; -webkit-perspective: 1000; }
.cube { -webkit-transform: translate3d(0, 0, 0); }
header { background-color: #ff0140;position: relative; }
.header_con {overflow: hidden; position: relative; z-index: 3;  }


.header_logo { position: relative; z-index: 3; display: block; width: 16rem; text-align: center; margin: 2rem auto 1rem; }
    .header_logo img.logo { display: block; width: 100%; }
    .header_logo img.plane { display: block; position: absolute; right: -5rem; top: 0rem; opacity: 1; width: 5rem; }
    .header_logo img.plane { -webkit-animation: plane_top 6s infinite cubic-bezier(0,0,0,1),plane_right 6s infinite cubic-bezier(0,0.6,0,1); }


.header_nav { padding: 0 1rem; position: relative; z-index: 4; }
    .header_nav ul { height: 4rem; line-height: 5rem; display: -webkit-box; }
        .header_nav ul li { -webkit-box-flex: 1; font-size: 1.8rem; color: #fff; text-align: center; }
            .header_nav ul li a { display: block; }
.header_cloud { display: block; position: absolute; }
    .header_cloud:nth-child(4n+1) { -webkit-animation: cloud_1 infinite alternate 8s .5s; top: 20px; left: 0px; z-index: 1; width: 8rem; opacity: 0.8; }
    .header_cloud:nth-child(4n+2) { -webkit-animation: cloud_2 infinite alternate 6s; top: 40px; left: 10px; z-index: 2; width: 8.5rem; opacity: 0.6; }
    .header_cloud:nth-child(4n+3) { -webkit-animation: cloud_3 infinite alternate 8s 1s; top: 42px; right: -10px; z-index: 2; width: 8rem; opacity: 0.6; }
    .header_cloud:nth-child(4n+4) { -webkit-animation: cloud_4 infinite alternate 8s 1.5s; top: 18px; right: -30px; z-index: 1; width: 7.5rem; opacity: 0.8; }



.header_lace { -webkit-animation: lace infinite alternate linear 6s;position:absolute;bottom:-3rem;left:0; width: 100%; height: 3rem; background: url(../img/header_lace.png) repeat-x left top;background-size:auto 1.5rem; }

@-webkit-keyframes plane_top {
    0% { top: 4rem; opacity: 0.2; width: 8rem; }
    40% { top: 0rem; opacity: 1; width: 5rem; }
    60% { top: 0rem; opacity: 1; width: 5rem; }
    100% { top: -2rem; opacity: .2; width: 3rem; }
}

@-webkit-keyframes plane_right {
    0% { right: 15rem; }
    40% { right: -5rem; }
    60% { right: -5rem; }
    100% { right: -10rem; }
}



@-webkit-keyframes lace /* Safari and Chrome */
{
    0% { background-position: 0 top; }
    100% { background-position: 100% top; }
}

@-webkit-keyframes cloud_1 {
    0% { left: 0px; }
    100% { left: 20px; }
}

@-webkit-keyframes cloud_2 {
    0% { left: 10px; }
    100% { left: 40px; }
}

@-webkit-keyframes cloud_3 {
    0% { right: -10px; }
    100% { right: 10px; }
}

@-webkit-keyframes cloud_4 {
    0% { right: -30px; }
    100% { right: -10px; }
}
