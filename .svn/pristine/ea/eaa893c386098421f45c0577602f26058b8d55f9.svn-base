//自动化工厂应用
.automation{
    min-width:15rem;
    .tit h2{
        .f-size(0.35rem);
        .f-weight(700); 
        .padding(.35rem 0);
        .t-align(center);
    }
    .con{
        .padding(b,.5rem);
        ul{
            .padding(0);
            .margin(0);
        }
        ul li{
            .ls;
            .size(50%,auto);
            .float(left);
            .margin(.2rem 0);
            img{
                .size(100%,auto)
            }
           .tit{
                .f-size(.23rem);
                .f-weight(600);
                .padding(.2rem 0);
                color:@color2;
                span{
                    .margin(r,.2rem)
                }
            }
        }
        ul li:nth-child(odd) .img{
            .padding(r,.7rem);
        }
        ul li:nth-child(even) .img{
            .padding(l,.7rem);
        }
        ul li:nth-child(even) .tit{
            .padding(l,.7rem);
        }
    }   
}


