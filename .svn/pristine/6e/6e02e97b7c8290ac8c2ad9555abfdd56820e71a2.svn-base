html, body { width: 100%; height: 100%; overflow: hidden; }

.mymap { height: 100%; }

.mylist { box-shadow: 0 0 3px 3px rgba(53,53,53,.2); width: 240px; height: 60%; border-radius: 6px; overflow: hidden; background-color: rgba(244, 244, 244, 0.4); }
    .mylist .inputBox { height: 28px; position: absolute; left: 10px; top: 10px; right: 10px; z-index: 2; border: 1px solid rgb(0, 203, 248); padding: 2px 5px; background-color: rgba(255, 255, 255, .6); border-radius: 4px; overflow: hidden; }
        .mylist .inputBox input { width: 100%; height: 100%; border: 0 none; box-sizing: border-box; line-height: 1; background-color: transparent; }
            .mylist .inputBox:hover { background-color: rgba(255, 255, 255, 1); box-shadow: 0 0 4px rgba(11,11,11,.8); }
    .mylist .ulBox { position: absolute; left: 0; top: 50px; right: 0; bottom: 0; padding: 5px 10px; box-sizing: border-box; overflow: auto; }
        .mylist .ulBox li { border-left: 5px solid rgb(0, 203, 248);transition:all .12s;cursor: pointer; background-color: rgba(255, 255, 255, .6); padding: 5px; line-height: 1.5;  border-radius: 4px; overflow: hidden; }

            .mylist .ulBox li + li { margin-top: 8px; }
            .mylist .ulBox li .hd { font-size: 12px; padding: 0 5px; overflow: hidden; }
                .mylist .ulBox li .hd .tip { float: left; }
                .mylist .ulBox li .hd .date { float: right; text-align: right; }


            .mylist .ulBox li .bd { min-height: 30px; border-top: .5px solid rgba(213, 213, 213, .6); border-bottom: .5px solid rgba(213, 213, 213, .6); margin: 5px 0; padding: 5px; overflow: hidden; }
            .mylist .ulBox li.cur .bd .name { font-weight: bold; }
            .mylist .ulBox li .bd .date { font-size: 12px; }

            .mylist .ulBox li .ft { text-align: right; font-size: 12px; padding: 0 5px; overflow: hidden; }
                .mylist .ulBox li .ft .office { float: left; }
                .mylist .ulBox li .ft .phone { float: right; text-align: right; }

            .mylist .ulBox li.cur,.mylist .ulBox li:hover  { background-color: rgba(255, 255, 255, 1); box-shadow: 0 0 4px rgba(11,11,11,.6);  }
