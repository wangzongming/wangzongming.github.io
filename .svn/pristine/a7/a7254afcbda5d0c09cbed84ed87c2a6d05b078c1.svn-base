@import "base.less";


.cust-logo-area{
    background-color: #000000;
    padding-left: 0px;
    padding-right: 0px;
    
    &.active{
       background-color: #2e2e2e;
       //background-color: #B84926;
       
    }
    
    .cust-logo.navbar{
        margin-bottom: 0.26rem;
        min-height: 0.94rem;
        border: 0px;
        
        .navbar-brand{
            margin-left: 0px;
            height: 0.94rem;
            padding: 0px;
            img{
                width: 4.00rem;
                height: 0.94rem;
            }
        }
        
        .navbar-collapse{
            
            >.nav.navbar-nav{
                >li{
                    &.open{
                        a,
                        a:hover,
                        a:focus{
                            background-color: transparent;
                        }
                    }
                    >a{
                        
                        padding-top: 0.40rem;
                        padding-left: 0.12rem;
                        padding-right: 0.12rem;
                        font-size: 0.18rem;
                        line-height: 0.18rem;
                        color: #FFFFFF;
                        
                        &:focus,
                        &:hover{
                            background-color: transparent;
                            color: @color-orange;
                        }
                    }
                    
                    >ul.dropdown-menu{
                        min-width: 120px;
                        background-color: #4d4d4d;
                        >li{
                            >a{
                                color: #FFFFFF;
                                font-size: 0.18rem;
                                line-height: 0.26rem;
                                img{
                                    width: 0.30rem;
                                    height: auto;
                                }
                            }
                            
                            &.divider{
                                margin-top: 4px;
                                margin-bottom: 4px;
                            }
                        }
                    }
                }
            }
        }
    
    }

}
